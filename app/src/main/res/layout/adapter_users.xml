<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="6dp"
    android:background="@drawable/round_card"
    android:orientation="vertical"
    android:elevation="18dp"
    android:id="@+id/adapter_linear_layout"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:animateLayoutChanges="true"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/linear_title">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/round_card"
            android:gravity="center_vertical|center_horizontal"
            android:transitionName="imageTransition"
            android:padding="6dp"
            android:id="@+id/relative_single_user">

            <ImageView
                android:layout_gravity="top"
                android:id="@+id/image_view_adapter"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:transitionName="imageTransition"
                android:src="@mipmap/android_photo_round"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="6dp"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TextView"
                    android:textSize="18dp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/custom_buttom_1"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TextView"
                    android:textAlignment="center"
                    app:layout_constraintBaseline_toBaselineOf="@+id/custom_buttom_1"
                    app:layout_constraintStart_toEndOf="@+id/user_name" />

            </LinearLayout>



            <Button
                android:id="@+id/custom_buttom_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0.3"
                android:padding="6dp"
                android:background="@drawable/round_card"
                android:inputType="text"
                android:textSize="20dp"
                android:text="eliminar"
                android:textColor="@color/colorAccent"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="right"
        android:id="@+id/linear_open_close">

        <Button
            android:id="@+id/custom_buttom_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0.5"
            android:background="@drawable/round_card"
            android:inputType="textShortMessage"
            android:text="abrir"
            android:textColor="@color/colorAccent"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" >
        </Button>


        <Button
            android:id="@+id/custom_buttom_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0.5"
            android:background="@drawable/round_card"
            android:inputType="textShortMessage"
            android:text="cerrar"
            android:textColor="@color/colorAccent"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" >
        </Button>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/textLorem">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="@string/lorem"
            android:visibility="visible"/>
    </LinearLayout>
</LinearLayout>